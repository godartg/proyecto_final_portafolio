@model IEnumerable<SistemaPortafolio.Models.Silabo>

@{
    ViewBag.Title = "Index";
}

<h2>SÍLABOS</h2>

<p>
    <button class="btn btn-default">@Html.ActionLink("CREAR", "Create")</button>
</p>
<table class="table table-condensed bg-gray-light">
    <tr>
        <th>
            Curso
        </th>
        <th>
            Descripción
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CursoDocente.Curso.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.silabo_id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.silabo_id }) |*@
            @Html.ActionLink("Borrar", "Delete", new { id=item.silabo_id })
        </td>
    </tr>
}

</table>
