@model SistemaPortafolio.Models.Portafolio

@{
    ViewBag.Title = "ELIMINAR";
}

<h2>ELIMINAR</h2>

<h3>¿Está seguro que desea eliminar este archivo?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            DOCUMENTO
        </dt>
        <dd>
            Portafolio
        </dd>
        <dt>
            CURSO
        </dt>
        <dd>
            @Model.CursoDocente.Curso.nombre
        </dd>
        <dt>
            CÓDIGO
        </dt>
        <dd>
            @Model.CursoDocente.Curso.curso_cod
        </dd>
        <dt>
            DOCENTE
        </dt>
        <dd>
            @Model.CursoDocente.Persona.nombre @Model.CursoDocente.Persona.apellido
        </dd>
    </dl>

    @using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="ELIMINAR" class="btn btn-default" /> |
        @Html.ActionLink("Regresar", "Index")
    </div>
    }
</div>
